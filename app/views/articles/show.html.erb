<h1 align="center">
	<strong>
		Title :
		<%= @article.title %>
		<strong></h1>
<div class="card">
	<div class="card-header">
		<div class="card bg-light mycard mb-3 offset-5" style="max-width: 540px;">
			<h2	>Created by:</h2>
			<div class="row">
				<div class="col-md-8">
					<%= link_to gravatar_for(@article.user,size: 130),user_path(@article.user) %>
				</div>
			</div>
			<div class = "row">
				<div class="col-md-8">
					<div class="card-body">
						<h1 class="card-title"><%= @article.user.username %></h1>
						<p class="card-text" ><small class = "text-muted">Contact <%= @article.user.username %>:</small>
						<small class = "text-muted"><%= @article.user.email %></small></p>
						<p class = "card-text"><small class = "text-muted"> <%=(@article.user.username)%> has <%= pluralize(@article.user.articles.count,"article") %></small></p>

					</div>
				</div>
			</div>
		</div>
		<h4><strong>Description:</strong></h4>
	</div>
	<div class="card-body">
		<%= @article.description %>
	</div>
	<div class="card-footer">
		<%= link_to 'edit current article',edit_article_path(@article),class: "btn btn-md btn-primary" if logged_in? and (current_user == @article.user || current_user.admin?) %>
		<%= link_to 'delete article', article_path(@article), class: "btn btn-md btn-danger", method: :delete, data: {confirm: 'Are you sure you want to delete the article?'} if logged_in? and (current_user == @article.user || current_user.admin?) %>
		<%= link_to 'View all articles', articles_path, class: "btn btn-md btn-success" %>
		<!-- </div> -->
	</div>

</div>
